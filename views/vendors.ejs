<%- include('partials/header') %>
    <div id="main">
        <div class="report">
            <div class="action-bar">
                <a class="action-button" href="/add-vendor">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path
                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    New Vendor
                </a>
                <% if (showAll) { %>
                    <a class="action-button black-button" href="/vendors">Show All</a>
                <% } else { %>
                    <form action="/search-vendors" method="post" autocomplete="off">
                        <div class="search-bar">
                            <input name="vendor" class="form-control" type="text" placeholder="Vendors...">
                            <button class="search-button">Search</button>
                        </div>
                    </form>
                <% } %>
            </div>
            <table class="table table-striped table-hover table-bordered table-sm">
                <thead class="table-header">
                    <tr>
                        <th colspan="6">All Vendors</th>
                    </tr>
                    <th scope="col">Company:</th>
                    <th scope="col">City:</th>
                    <th scope="col">Prov / State:</th>
                    <th scope="col">Phone:</th>
                    <th scope="col">Email:</th>
                    <th scope="col"></th>
                </thead>
                <tbody class="">
                    <% vendors.forEach((vendor) => { %>
                    <tr class="align-right"> 
                        <td class="table-header"><%= vendor.company %></td>
                        <td class="table-header column-sm"><%= vendor.city %></td>
                        <td class="table-header column-sm"><%= vendor.state %></td>
                        <td class="table-header column-sm"><%= vendor.phone %></td>    
                        <td class="table-header"><%= vendor.email %></td>    
                        <td class="table-delete">
                            <div class="dropdown">
                                <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                        <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                    </svg>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/update-vendor-id=<%= vendor._id %>">Edit Vendor</a></li>
                                    <li><a class="dropdown-item" href="/delete-vendor-id=<%= vendor._id %>">Delete Vendor</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% if (pages != 1) { %>
            <div class="pagination-panel">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <% if (pageNumber != 1) { %>
                            <li class="page-item"><a class="page-link" href="?page=<%= Number(pageNumber) - 1%>">Previous</a></li>
                        <% } %>
                        <% for (var a = 1; a <= pages; a++) { %>
                            <li class="page-item"><a class="page-link" href="?page=<%= a; %>"><%= a; %></a></li>
                        <% } %>
                        <% if (pageNumber != pages) { %>
                            <li class="page-item"><a class="page-link" href="?page=<%= Number(pageNumber) + 1%>">Next</a></li>
                        <% } %>
                
                    </ul>
                    </nav>
            </div>
            <% } %>
        </div>
    </div>
<%- include('partials/footer') %>